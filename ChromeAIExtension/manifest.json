{
    "manifest_version": 3,
    "name": "Chrome AI Article Summarizer Extension",
    "version": "0.0.1",
    "description": "Summarizes articles on the web using Gemini LLM",

    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]            
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "options_page": "options.html",

    "host_permissions": ["<all_urls>"]

}
